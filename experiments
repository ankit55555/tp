Exp2. 

x<- 3L 
print(class(x))

x<- 3.6
print(class(x))

x<- "hii" 
print(class(x))

x<- 3i 
print(class(x))

x<- charToRaw("bye") 
print(class(x))















Expt 3
#vector
x<- c(1,2,3,4)
print(x)

x<- 1:5
print(x)

#list
x<- list("hii",3,33.3,"bye")
print(x)

#matrix
x<- matrix(c(1,2,3,4,5,6),nrow = 3,byrow = TRUE) 
print(x)

#data frames
x<- data.frame(no=c(1,2,3),val=c("a","b","c")) 
print(x)











